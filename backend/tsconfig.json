{
	"compilerOptions": {
		"target": "es6",
		"lib": [
			"ES6",
			"ES5"
		],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": false,
		"outDir": "./dist",
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"./src/**/*"
	],
}